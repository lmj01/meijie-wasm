{
    "version": 3,
    "configurePresets": [
        {
            "name": "default",
            "generator": "Ninja",
            "hidden": true,
            "toolchainFile": "${sourceDir}/../build/emsdk/upstream/emscripten/cmake/Modules/Platform/Emscripten.cmake"
        },
        {
            "name": "windows",
            "displayName": "Windows preset",
            "description": "Preset for building on Windows",
            "generator": "Visual Studio 16 2019",
            "binaryDir": "${sourceDir}/build/windows",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release",
                "CMAKE_INSTALL_PREFIX": "${sourceDir}/install/windows"
            },
            "condition": {
              "type": "equals",
              "lhs": "${hostSystemName}",
              "rhs": "Windows"
            }
        },        
        {
            "name": "debug",
            "inherits": "default",
            "displayName": "Emscripten Debug",
            "binaryDir": "${sourceDir}/build/debug",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug"
            }
        },
        {
            "name": "release",
            "inherits": "windows",
            "displayName": "Emscripten Release",
            "binaryDir": "${sourceDir}/build/release",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release"
            }
        }
    ],
    "buildPresets": [
        {
            "name": "debug",
            "configurePreset": "debug",
            "configuration": "Debug",
            "targets": ["install"]
        },
        {
            "name": "release",
            "configurePreset": "release",
            "configuration": "Release",
            "targets": ["install"]
        }
    ]
}
